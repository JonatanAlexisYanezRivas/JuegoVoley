        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="193dp"
        android:onClick="movementsEnemy"
        android:text="en1" />

    <CheckBox
        android:id="@+id/en2"
